<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit Haunted Location</h1>
  <div class="col-md-6 offset-md-3">
    <!-- form needs to be novalidate so bootstrap validation can takeover using validated-form class -->
    <form action="/hauntedLocations/<%= hauntedLocation._id %>?_method=PUT" method="POST" novalidate
      class="validated-form" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="hauntedLocation[title]"
          value="<%= hauntedLocation.title %>" required autocomplete="off">
        <div class="valid-feedback">
          Title Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="hauntedLocation[location]"
          value="<%= hauntedLocation.location %>" required autocomplete="off">
        <div class="valid-feedback">
          Location Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Location Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">Â£</span>
          <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
            aria-describedby="price-label" name="hauntedLocation[price]" value="<%= hauntedLocation.price %>" required
            autocomplete="off">
          <div class="valid-feedback">
            Price Looks good!
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="hauntedLocation[description]" required
          autocomplete="off"><%= hauntedLocation.description %></textarea>
        <div class="valid-feedback">
          Description Looks good!
        </div>
      </div>
      <div class="mt-3 mb-5">
        <label for="image" class="form-label">Choose Images</label>
        <input class="form-control" type="file" id="image" name="image" multiple>
      </div>
      <div class="mb-3">
        <% hauntedLocation.images.forEach(function(img, i) {%>
        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
        <div class="form-check-inline">
          <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename  %>">
        </div>
        <label for="image-<%=i%>">Delete</label>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Update Haunted Location</button>
      </div>
    </form>
    <a href="/hauntedLocations/<%= hauntedLocation._id %>">Back to Location</a>
  </div>
</div>